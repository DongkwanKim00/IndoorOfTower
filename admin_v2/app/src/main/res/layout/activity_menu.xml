<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/textInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter text"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <EditText
        android:id="@+id/xCoordinateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter X coordinate"
        android:layout_below="@id/textInput"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <EditText
        android:id="@+id/yCoordinateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Y coordinate"
        android:layout_below="@id/xCoordinateInput"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/measureButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/yCoordinateInput"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="Measure" />



</RelativeLayout>
